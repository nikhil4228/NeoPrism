<link href="../css/bootstrap.min.css" rel="stylesheet">
<link href="../css/modern-business.css" rel="stylesheet">


<div id="myCarousel" class="carousel slide">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <div class="fill" style="background-image:url('../Images/Corporate-agm.jpg');"></div>
            <div class="carousel-caption">
                <h2>Office</h2>
            </div>
        </div>
        <div class="item">
            <div class="fill" style="background-image:url('../Images/Mainframe.jpg');"></div>
            <div class="carousel-caption">
                <h2>Mainframes</h2>
            </div>
        </div>
        <div class="item">
            <div class="fill" style="background-image:url('../Images/opportunity-knocks-quotes.jpg');"></div>
            <div class="carousel-caption">
                <h2>Opportunity</h2>
            </div>
        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="icon-prev"></span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="icon-next"></span>
    </a>
</div>



<!-- /.container -->
<!-- jQuery -->
<script src="../js/jquery.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="../js/bootstrap.min.js"></script>

<!-- Script to Activate the Carousel -->

<script>
            $('.carousel').carousel({
                interval: 3000 //changes the speed
            });
</script>